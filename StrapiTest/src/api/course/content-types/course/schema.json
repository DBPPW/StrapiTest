{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "Course",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "courseName": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "peopleLimit": {
      "type": "integer",
      "required": true,
      "default": 20
    },
    "lessonStartTime": {
      "type": "datetime",
      "required": true
    },
    "lessonEndTime": {
      "type": "datetime",
      "required": true
    },
    "applyStartTime": {
      "type": "datetime",
      "required": true
    },
    "applyEndTime": {
      "type": "datetime",
      "required": true
    },
    "orders": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order.order",
      "mappedBy": "course"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "mappedBy": "courses"
    },
    "remaining": {
      "type": "integer"
    },
    "teacher": {
      "type": "string"
    },
    "popular": {
      "type": "boolean"
    },
    "image": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    }
  }
}
